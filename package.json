{
  "name": "mcp-congress_gov-server",
  "version": "0.1.0",
  "description": "An MCP server which allows you to use your own API key to interact with api.congress.gov",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol"
  ],
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@types/inquirer": "^9.0.7",
    "axios": "^1.8.4",
    "chalk": "^5.3.0",
    "express": "^5.1.0",
    "inquirer": "^12.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.2",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "lint-staged": "^5.0.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^1.4.1",
    "prettier": "^3.3.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
